<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hongri.lottie.MainActivity">

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下拉刷新"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="2dp"
        android:background="#ddff00"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_scale="1.0"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="2dp"
        android:background="#ddff00"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_scale="1.0"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="2dp"
        android:background="#ddff00"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_scale="1.0"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddaa00"
        android:text="取消异步加载composition"/>

    <com.airbnb.lottie.LottieAnimationView
    android:id="@+id/animation_view4"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginBottom="2dp"
    android:background="#ddff00"
    app:lottie_autoPlay="false"
    app:lottie_loop="true"
    app:lottie_scale="1.0"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="2dp"
        android:background="#ddff00"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_scale="1.0"/>

</LinearLayout>
